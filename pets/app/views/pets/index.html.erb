<h1>Listing pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Image url</th>
      <th>Age</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(pet.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= pet.name %></dt>
            <dt><%= pet.species %></dt>
            <dt><%= pet.age %></dt>
          </dl>
          <
        </td>
        <td class="list_actions">
          <%= link_to 'Show', pet %><br/>
          <%= link_to 'Edit', edit_pet_path(pet) %><br/>
          <%= link_to 'Destroy', pet, method: :delete, data: {confirm: 'Delete you pet?'}%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

