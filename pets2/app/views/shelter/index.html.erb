<h1>Your possible pets</h1>
<% @pets.each do |pet| %>
	<% if pet.status == "available" %>
		<div class="entry">
			<div class="entry2">
				<%= image_tag(pet.image_url) %>
				<h3><%= pet.name %> </h3>
				<h5>Species: <%= pet.species %></h5>
				<h5>Age: <%= pet.age %></h5>
				<%= button_to 'Consider', consideration_items_path(pet_id: pet), remote: true %>
			</div>
			<div class="pick">
				<%= button_to 'Pick me', foster_agreements_path(pet_id: pet) %>
			</div>
		</div>

	<% end %>
<% end %>

