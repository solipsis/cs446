
<table>
	<tr>
		<td>Rank</td>
		<td>Title</td>
		<td>Author</td>
		<td>Language</td>
		<td>Year</td>
		<td>Copies</td>
	</tr>
<% @books.each do |book| %>
	<tr>
		<td><%= book[:id] %></td>
		<td><%= book[:title] %></td>
		<td><%= book[:author] %></td>
		<td><%= book[:language] %></td>
		<td><%= book[:published] %></td>
		<td><%= book[:sold] %></td>	
	</tr>
<% end %>
</table>

